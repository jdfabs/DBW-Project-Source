<!doctype html>
<html lang="pt-PT">

<head>
  <%- include("./partials/head.ejs")  %>
  <link rel="stylesheet" href="/css/recipeGenerator.css">

</head>

<body class="bg-img bg-cover">



  <!-- Main Content-->
  <div class="mainContent bg-img bg-cover d-grid  " style="background-image: url('/images/ui_background.png');">
    <div class="d-inline ">
      <!-- Title and Filter-->
      <div>
        <div class=" d-flex justify-content-between align-items-end">
          <h1> Repecie Generator </h1>


        </div>
        <!--Filter Window-->
        <div class="recipeContainer">
          <form id="recipeForm" class="d-grid p-4 ">

            <div class="row">
              <!--Ingredient col-->
              <div class="col-lg-6  filterOptions">
                <div id="ingredientList">
                  <div class="d-flex">
                    <input class="col-10 input-sm" name="Ingredient1" type="text" placeholder="Ingredient" />
                    <button class="removeBtn col-2">-</button>
                  </div>
                  <div class="d-flex">
                    <input class="col-10 input-sm" name="Ingredient2" type="text" placeholder="Ingredient" />
                    <button class="removeBtn col-2">-</button>
                  </div>
                  <div class="d-flex">
                    <input class="col-10 input-sm" name="Ingredient3" type="text" placeholder="Ingredient" />
                    <button class="removeBtn col-2">-</button>
                  </div>
                </div>
                <div class="d-flex ">
                  <button id="moreIng" class="addBtn">+ </button>
                </div>


              </div>
              <!--Method col-->
              <div class="col-lg-6 filterOptions">
                <div id="methodList">
                  <div class="d-flex">
                    <select class="input-sm" name="cookingMethod" id="cookingMethods">
                      <option value="Boiling">Boiling</option>
                      <option value="Steaming">Steaming</option>
                      <option value="Grilling">Grilling</option>
                      <option value="Roasting">Roasting</option>
                      <option value="Baking">Baking</option>
                      <option value="Frying">Frying</option>
                      <option value="Sautéing">Sautéing</option>
                      <option value="Braising">Braising</option>
                      <option value="Poaching">Poaching</option>
                      <option value="Simmering">Simmering</option>
                      <option value="Blanching">Blanching</option>
                      <option value="Slow cooking">Slow cooking</option>
                    </select>
                    <button class="removeBtn">-</button>
                  </div>
                </div>

                <button id="moreMethod" class="addBtn">+ </button>
              </div>
            </div>
            <!--Random Filters-->
            <div class=" row ">
              <div class="col-lg-6 filterOptions">
                <div class="row d-flex align-items-center ">
                  <h6>Restrictions</h6>
                  <span class="col-6 text-end">Vegetarian <input name="Vegetarian" type="checkbox"></span>
                  <span class="col-6 text-end">Gluten-free <input name="Gluten-free" type="checkbox"></span>
                  <span class="col-6 text-end">Dairy-free <input name="Dairy-free" type="checkbox"></span>
                  <span class="col-6 text-end">Nut-free <input name="Nut-free" type="checkbox"></span>
                  <span class="col-6 text-end">Keto <input name="Keto" type="checkbox"></span>
                  <span class="col-6 text-end">Paleo <input name="Paleo" type="checkbox"></span>
                  <span class="col-6 text-end">Allergen-free <input name="Allergen-free" type="checkbox"></span>
                  <span class="col-6 text-end">High-protein <input name="High-protein" type="checkbox"></span>
                </div>
                <div class=" row d-flex align-items-center">
                  <h6>Dish Type</h6>
                  <span class="col-6 text-end">Breakfast <input name="Breakfast" type="checkbox"></span>
                  <span class="col-6 text-end">Lunch <input name="Lunch" type="checkbox"></span>
                  <span class="col-6 text-end">Dinner <input name="Dinner" type="checkbox"></span>
                  <span class="col-6 text-end">Snacks <input name="Snacks" type="checkbox"></span>
                  <span class="col-6 text-end">Appetizers <input name="Appetizers" type="checkbox"></span>
                  <span class="col-6 text-end">Desserts <input name="Desserts" type="checkbox"></span>
                </div>
              </div>
              <!--MISC-->
              <div id="miscOptions" class="col-lg-6 filterOptions">
                <div class="row d-flex align-items-center ">
                  <h6 class="text-end">Misc.</h6>
                  <span class="d-none d-xl-block  text-end m-1">Minimum number of ingredients <input name="minNumIng" type="text"></span>
                  <span class="d-xl-none          text-end m-1">Min num of ingredients <input name="minNumIng" type="text"></span>
                  <span class="d-none d-xl-block  text-end m-1">Maximum number of new ingredients <input name="maxNumNewIng" type="text"></span>
                  <span class="d-xl-none  text-end m-1">Max num of new ingredients <input name="maxNumNewIng" type="text"></span>
                  <span class="d-none d-xl-block  text-end m-1">Number of recipes to generate <input name="numReciToGen" type="text" placeholder="3"></span>
                  <span class="d-xl-none  text-end m-1">Num of recipes to generate <input name="numReciToGen" type="text" placeholder="3"></span>

                  <span class=" text-end m-1">Maximum cooking time <input name="maxTime" type="text"></span>
                  <span class=" text-end m-1">
                    Dificulty rating
                    <select class="input-num" name="dificultyRating" id="cookingMethods">
                      <option value="1"> 1</option>
                      <option value="2"> 2</option>
                      <option value="3"> 3</option>
                      <option value="4">4</option>
                      <option value="5">5</option>
                    </select>

                  </span>
                  <span class=" text-end m-1">
                    Spice level
                    <select class="input-num" name="dificultyRating" id="cookingMethods">
                      <option value="1"> 1</option>
                      <option value="2"> 2</option>
                      <option value="3"> 3</option>
                      <option value="4">4</option>
                      <option value="5">5</option>
                    </select>
                  </span>
                </div>
              </div>

            </div>

            <input id="generate-btn" class="btn-md mx-auto mt-3 sumbit_btn" type="submit" value="Generate" />

          </form>
        </div>

      </div>





      <!-- recipes container-->
      <div id="Recipes">
        <% if (recipes.length > 0) { 
          recipes.forEach(recipe => { %>

        <section class="recipeContainer d-flex">
          <img class="recipeImage d-none d-lg-block" src="/images/PlaceholderImage.png" alt="Alternate Text" />

          <div class="p-2">
            <div class="d-block">
              <div class="d-block d-sm-flex  align-items-end">
                <h3><%=recipe.recipeName %></h3>
                <h5> - creator name</h5>
              </div>
            <div>
              <h1> X</h1>
              </div>
            </div>
            <div class="d-flex ">
              <img class="rating " src="/images/Rating.png" alt="rating" />
              <p class="d-none d-sm-block"> - 500 ratings</p>
            </div>
            <p class="d-sm-none"></p>
            <div class="d-block  ">
              <h5> Description -</h5>
              <p class="d-none d-sm-block"><%=recipe.description %></p>
              <p class="d-sm-none"> SHORT VERSION Assurance advantage belonging happiness departure so of. Now improving and one sincerity intention allowance commanded not.</p>
            </div>
            <div class="d-block ">
              <h5> Ingredients -</h5>
              <p> <%=recipe.ingredients %></p>
            </div>
            <div class="d-none d-sm-block ">
              <h5> tags -</h5>
              <p> <%=recipe.tags %></p>
            </div>
          </div>
        </section>
        <%  });}%>



      </div>
    </div>

  </div>



  <%- include("./partials/nav.ejs")  %>
  <%- include("./partials/footer.ejs")  %>


  <!-- Scripts -->

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
  <script src="/js/recipeGenerator.js"></script>
</body>

</html>