<!doctype html>
<html lang="pt-PT">

<head>
<%- include("./partials/head.ejs")  %>
</head>

<body class="bg-img bg-cover">
  <!-- Logotipo-->
  
  <%- include("./partials/logo.ejs")  %>
  <%- include("./partials/nav.ejs")  %>
  <%- include("./partials/footer.ejs")  %>

  <!-- Main Content-->
  <div class="mainContent bg-img bg-cover d-grid  " style="background-image: url('/images/BackgroundWindow.png');">
    <div class="d-inline ">
      <!-- Title and Filter-->
      <div>
        <div class="window-header d-flex justify-content-between align-items-end">
          <h1> Repecie Gallery </h1>
          <a href="#test"><img id="filter" src="/images/FilterIcon.png" alt="filter" /> </a>

        </div>
        <!--Filter Window-->
        <div class="bg-img bg-cover" style="background-image: url('/images/BackgroundWindowNotification.png');">
          <form class="d-grid p-4 ">

            <div class="row">
              <!--Ingredient col-->
              <div class="col bg-info filterOptions">
                <div class="d-block">
                  <button class="removeBtn">-</button>
                  <input class="input-sm" name="ingredient1" type="text" placeholder="Ingredient 1" />
                </div>

                <div class="d-block">
                  <button class="removeBtn">-</button>
                  <input class="input-sm" name="ingredient1" type="text" placeholder="Ingredient 2" />
                </div>
                <div class="d-block">
                  <button class="removeBtn">-</button>
                  <input class="input-sm" name="ingredient1" type="text" placeholder="Ingredient 3" />
                </div>
                <div class="d-flex ">
                  <button id="moreIng" class="addBtn">+ </button>
                </div>


              </div>
              <!--Method col-->
              <div class="col bg-warning filterOptions">
                <div class="d-block">
                  <div>
                    <button class="removeBtn">-</button>
                    <select class="input-sm" name="cookingMethods" id="cookingMethods">
                      <option value="Method 1">Method 1</option>
                      <option value="Method 2">Method 2</option>
                      <option value="Method 3">Method 3</option>
                      <option value="Method 4">Method 4</option>
                    </select>
                  </div>
                </div>

                <button id="moreMethod" class="addBtn">+ </button>
              </div>
            </div>


            <input class="btn-md mx-auto mt-3" type="submit" value="Filter" />

          </form>
        </div>

      </div>
      <!-- NEW RECEPIE BUTTON-->
      <div class="bg-primary d-flex justify-content-center">

        <a href="/recepieGenerator"><button id="newRecepieButton" class="m-3">
            <h5>Generate new recepie</h5>
          </button></a>
      </div>

      <!-- Recepies container -->
      <div class="bg-primary">
        <% if (recepies.length > 0) { 
                    recepies.forEach(recepie => { %>

        <section class="recepieContainer bg-secondary d-flex">
          <img class="recepieImage d-none d-lg-block" src="/images/PlaceholderImage.png" alt="Alternate Text" />

          <div class="p-2">
            <div class="d-flex align-items-end">
              <h3><%=recepie.title %></h3>
              <h5> - creator name</h5>
            </div>
            <div class="d-flex ">
              <img class="rating" src="/images/Rating.png" alt="rating" />
              <p> - 500 ratings</p>
            </div>
            <div class="d-block  ">
              <h5> Description -</h5>
              <p> Assurance advantage belonging happiness departure so of. Now improving and one sincerity intention allowance commanded not. Oh an am frankness be necessary earnestly advantage estimable extensive.</p>
            </div>
            <div class="d-block  ">
              <h5> Ingredients -</h5>
              <p> Assurance, advantage, belonging, happiness, departure, sincerity, intention, allowance.</p>
            </div>
            <div class="d-block ">
              <h5> tags -</h5>
              <p> Assurance, advantage, belonging.</p>
            </div>
          </div>
        </section>
        <%  });}
        else{%>
            <h3>No Recepies to be displayed</h3>
            <% }%>

      </div>
    </div>


    

  


    <!-- Scripts -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
</body>

</html>